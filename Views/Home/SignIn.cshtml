@{
    ViewData["Title"] = "Sign In";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <link rel="stylesheet" href="style.css" />
</head>
<body style="background-image: url(https://images.ctfassets.net/nnkxuzam4k38/219VUMa1SOxASKqCE2OgT4/be1c810344587bd7f6f203337d23602a/ranger-4df6c1b6.png); background-repeat: no-repeat; background-size: cover;">
    <br><br> 
    <form action="" method="post" style="background-image: url(https://t3.ftcdn.net/jpg/02/94/52/66/360_F_294526635_8Fc9IbBHWOC83JsiFNRNx5VivafEjiyi.jpg);
    background-repeat: no-repeat; background-size: cover; padding: 1px; border: 2px solid black; max-width: 500px; margin: 20px auto; 
    box-sizing: border-box; border-radius: 20px;" width="1" height="40">
            <h2 align="center">Sign Form</h2>
            <p style="color: rgb(7, 7, 26);" align="center">Please fill out the form:</p>
          <br><br>
          <div align="center">
            <div style="display: inline-block; background-color: lightseagreen; padding: 10px; border-radius: 20px;">
            <br><br>
            <label for="name">Full Name:</label>
            <input type="text" id="userName" name="userName" placeholder="Enter your name" required>
            <br><br>    
            <label for="mail">Mail:</label>
            <input type="email" id="mail" name="mail" placeholder="ex@gmail.com" required>
            <br><br>
            <label for="role">Role</label>
            <select id="userRole" name="userRole" placeholder="Select your role" required onchange="toggleInvitationCode()"> 
                <option value="erkek">Team Leader</option>
                <option value="kadin">Team Member</option> 
            </select>
            <br><br>
            <div id="invitationCodeDiv" style="display:none;">
                <label for="invitationCode">Team Invitation Code:</label>
                <input type="text" id="invitationCode" name="invitationCode" maxlength="5" placeholder="Enter code">
                <br><br>
            </div>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" placeholder="Create a password" required>
            <br><br>
            <button type="submit">Create An Account</button>
            <button type="reset">Reset</button>
            <br><br> 
           </div> 
         </div><br><br> 
        </form>
<script>
    function toggleInvitationCode() {
        var role = document.getElementById('userRole').value;
        var codeDiv = document.getElementById('invitationCodeDiv');
        if (role === 'kadin') {
            codeDiv.style.display = 'block';
        } else {
            codeDiv.style.display = 'none';
        }
    }
    document.addEventListener('DOMContentLoaded', function() {
        toggleInvitationCode();
    });
</script>
</body>
</html>