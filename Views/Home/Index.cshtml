@model IEnumerable<Todo>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Filter" method="post">
            <div class="mb-3">
                <label class="form-label" style="font-size:1.5em;">Category</label>
                <select name="filter" class="form-select"
                asp-items="@(new SelectList(ViewBag.Categories,"categoryId","categoryName",ViewBag.Filters.categoryID))">
                <option value="all">All</option> 
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label" style="font-size:1.5em;">Due Date</label>
                <select name="filter" class="form-select"
                asp-items="@(new SelectList(ViewBag.DueFilters, "Key", "Value", ViewBag.Filters.dueDate))">
                <option value="all">All</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label" style="font-size:1.5em;">Status</label>
                <select name="filter" class="form-select"
                asp-items="@(new SelectList(ViewBag.Statuses, "statusId", "statusName", ViewBag.Filters.statusID))">
                <option value="all">All</option>
                </select>
            </div>
            <button type="submit" class="btn btn-info">Filter</button>
            <a asp-action="Index" asp-route-id="" class="btn btn-warning">Clear</a>
        </form>
    </div>
    <div class="col-md-8">
        <form asp-action="MarkComplete" method="post" asp-route-id="@ViewBag.Filters.FilterString">
            <table class="table table-bordered table-striped mt-2"> 
                <thead> 
                    <tr>
                        <th style="font-size:2em;">Name</th>
                        <th style="font-size:2em;">Description</th>
                        <th style="font-size:2em;">Category</th>
                        <th style="font-size:2em;">Due Date</th>
                        <th style="font-size:2em;">Status</th>
                        <th class="w-25" style="font-size:2em;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Todo task in Model)
                    {
                        string overdue = task.Overdue ? "bg-warning" : ""; 
                        <tr>
                            <td>@task.todName</td>
                            <td>@task.todDescription</td>
                            <td>@task.Category.categoryName</td>
                            <td class="@overdue">@task.dueDate?.ToString("MM/dd/yyyy")</td>
                            <td class="@overdue">@task.Status.statusName</td>
                            <td>
                                @if(task.Status.statusId == "pending")
                                {
                                    <button type="submit" class="btn btn-info btn-sm" 
                                    name="@nameof(Todo.todId)" value="@task.todId">Mark as Completed</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
     </form>
     <form asp-action="DeleteComplete" method="post" asp-route-id="@ViewBag.Filters.FilterString">
        <a asp-action="Add" class="btn btn-info">Add a New Task</a>
        <button type="submit" class="btn btn-danger">Delete All aCompleted Tasks</button>
        </form>
    </div>
</div>

